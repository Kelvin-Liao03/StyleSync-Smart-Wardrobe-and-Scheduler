<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StyleSync.RegisterPage"
             Title="Register"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="15">

            <Label Text="Create Your StyleSync Account"
                   FontSize="26"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Entry x:Name="UsernameEntry" Placeholder="Username" />
            <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
            <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirm Password" IsPassword="True" />

            <!-- Gender -->
            <Label Text="Gender" FontAttributes="Bold" />
            <Picker x:Name="GenderPicker" Title="Select Gender">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Male</x:String>
                        <x:String>Female</x:String>
                        <x:String>Other</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <!-- Events -->
            <Label Text="Events You Usually Attend" FontAttributes="Bold" />
            <VerticalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Weddings" VerticalOptions="Center" />
                    <Switch x:Name="WeddingSwitch" />
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Meetings" VerticalOptions="Center" />
                    <Switch x:Name="MeetingSwitch" />
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Sports / Gym" VerticalOptions="Center" />
                    <Switch x:Name="SportsSwitch" />
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Casual Hangouts" VerticalOptions="Center" />
                    <Switch x:Name="CasualSwitch" />
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!-- Clothing Styles -->
            <Label Text="Preferred Clothing Styles" FontAttributes="Bold" />
            <VerticalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Casual" VerticalOptions="Center" />
                    <Switch x:Name="CasualStyleSwitch" />
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Formal" VerticalOptions="Center" />
                    <Switch x:Name="FormalStyleSwitch" />
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Sporty" VerticalOptions="Center" />
                    <Switch x:Name="SportyStyleSwitch" />
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Traditional" VerticalOptions="Center" />
                    <Switch x:Name="TraditionalStyleSwitch" />
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!-- Shopping Frequency -->
            <Label Text="Shopping Frequency" FontAttributes="Bold" />
            <Picker x:Name="ShoppingPicker" Title="How often do you buy clothes?">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Weekly</x:String>
                        <x:String>Monthly</x:String>
                        <x:String>Rarely</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <!-- Buttons -->
            <Button Text="Register"
                    BackgroundColor="#5A9"
                    TextColor="White"
                    Clicked="OnRegisterClicked" />

            <Button Text="Back to Login"
                    BackgroundColor="Transparent"
                    TextColor="Blue"
                    Clicked="OnBackToLoginClicked"
                    HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
