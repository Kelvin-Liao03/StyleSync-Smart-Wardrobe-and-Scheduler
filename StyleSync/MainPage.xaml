<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StyleSync.MainPage"
             Title="StyleSync Home">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <Label Text="Welcome to StyleSync!"
                   FontSize="24"
                   HorizontalOptions="Center" />

            <Button Text="Check Weather Forecast"
                    Clicked="OnWeatherForecastClicked"
                     BackgroundColor="#5A9"
                 TextColor="White"/>

            <Button Text="What Should I Wear?"
                    Clicked="OnOutfitSuggestionClicked"
                     BackgroundColor="#5A9"
                 TextColor="White"/>

            <Button Text="👗 Style Your Outfit"
                    Clicked="OnStyleOutfitClicked"
                    BackgroundColor="#5A9"
                    TextColor="White"/>     


            <Button Text="My Wardrobe"
                    Clicked="OnWardrobeClicked" 
                     BackgroundColor="#5A9"
                 TextColor="White"/>

            <Button Text="Inventory Reminder"
                    Clicked="OnInventoryClicked" 
                     BackgroundColor="#5A9"
                 TextColor="White"/>

            <Button Text="🧥 Outfit History"
                 Clicked="OnOutfitHistoryClicked"
                 BackgroundColor="#5A9"
                 TextColor="White" />

            <Button Text="Log Out"
        Clicked="OnLogoutClicked"
        BackgroundColor="#F55"
        TextColor="White" />



            <Button Text="Reset Database"
        Clicked="OnResetDatabaseClicked"
        IsVisible="True" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
